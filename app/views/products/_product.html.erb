<div class="col-sm-6 col-md-3">
	<div class="thumbnail">
		<%= link_to image_tag(product.image_url, alt: 'product', size: '300x300'), show_path(product.id) %>
	</div>
	<div class="caption">
		<p> Title: <%= link_to product.title, show_path(product.id) %> </p>
		<p> Descrition: <%= product.description %> </p>
		<p> Price: <%= product.price %> </p>
	</div>
</div>