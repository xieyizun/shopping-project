<div class="col-sm-6 col-md-3">
	<div class="thumbnail">
		<%= image_tag(@product.image_url, alt: 'product') %>
	</div>
	<div class="caption">
		<p> Title: <%= @product.title %> </p>
		<p> Descrition: <%= @product.description %> </p>
		<p> Price: <%= @product.price %> </p>
		<% if sign_in? %>
		    <% if create_order? %>
				<p> add to shop cart: <%= button_to "add shop cart",items_path,class: "btn btn-primary btn-sm" %> </p>
			<% else %>
				<p> add to shop cart: <%= button_to "create a shop cart first", orders_path, class: "btn btn-primary btn-sm"%> </p>
			<% end %>
		<% else %>
			<p> add to shop cart: <%= link_to "sign in first", signin_path, class: "btn btn-primary btn-sm"%> </p>
		<% end %>
	</div>
</div>

<div class="row">
  <table class="table">
	  <caption >Comment</caption>
	  <thread>
		<tr>
			<th>Comment ID</th>
			<th>Buyer ID</th>
			<th>Score</th>
	  </thread>
	  <tbody id="show_comments">
		   <%= render @comments %>

	  </tbody>
	 
  </table> 
</div>
<div class="row"> <%= will_paginate @comments%></div>